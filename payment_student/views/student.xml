    <field name="model">res.student.payment.table</field>
    <field name="arch" type="xml">
        <form class="o_student_payment_table">
            <sheet>
                <group colspan="2">
                    <field name="table" colspan="2" nolabel="1"/>
                </group>
            </sheet>
            <footer/>
        </form>
    </field>
    </record>

