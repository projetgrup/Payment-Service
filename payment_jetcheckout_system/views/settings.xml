                                                                    <tree editable="bottom">
                                                                        <field name="name"/>
                                                                    </tree>
                                                                </field>-->
                                                                <field name="partner_tag_ids" widget="many2many_tags" options="{'no_create': True, 'no_open': True}" domain="['|', ('company_id', '=', False), ('company_id', '=', company_id)]"/>
                                                                <field name="campaign_ids" invisible="1"/>
                                                                <field name="company_id" invisible="1"/>
                                                            </group>
                                                        </group>
                                                    </sheet>
                                                </form>
                                            </field>
                                        </div>
                                    </div>
                                </div>
